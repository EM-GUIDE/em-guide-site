---
import FeaturedTag from "../components/FeaturedTag.astro";

interface Props {
  title: string;
  link: string;
  featuredTag?: any;
}

const { title, link, featuredTag } = Astro.props;
---

<div>
  {
    featuredTag && (
      <div class="mb-5">
        <FeaturedTag label={featuredTag.title} />
      </div>
    )
  }
  <a href={link}>
    <h3 class="max-w-screen-sm font-display textl-xl lg:text-2xl">{title}</h3>
  </a>
</div>
